<p id="notice"><%= notice %></p>

<div class="home-container">
  <div class="home-myParallax large-12 medium-12 small-12 columns">
    <h1>RAD PLANET</h1>
  </div>
</div>
<div class="home-description large-12 medium-12 small-12 columns"><h1>Our Planet Is Rad. Find Out Why. One Day At a Time.</h1></div>
<div class="recent-posts large-12 medium-12 small-12 columns"><h2>Recent Posts</h2></div>
<% @posts.reverse.each do |post| %>
<div class="home-date"> <h4><%= post.created_at.strftime("%B %d, %Y") %></h4> </div>
<div class="horizontal-callout-card">
  <div class="row column medium-8" data-equalizer>
    <div class="row collapse">
      <div class="column medium-3">
        <div class="callout secondary first-section" data-equalizer-watch>
          <strong><%= post.title %></strong>
        </div>
      </div>
      <div class="column medium-6">
        <div class="callout middle-section" data-equalizer-watch>
          <p><%= truncate(post.content, length: 250, omission: '...') { link_to "Read more", "#{post.id}" } %></p>
        </div>
      </div>
      <div class="column medium-3">
        <div class="callout secondary last-section" data-equalizer-watch>
          <p><%= post.name %></p><br>
        </div>
      </div>
    </div>
  </div>
</div>
<% end %>